@model TrainerToUpdateViewModel
@using GymManagmentDAL.Entities.Enum;
<div class="container">
    <main role="main" class="pb-3">

        <div class="container mt-4">
            <header class="mb-4">
                <h3 class="text-primary-color">Edit Trainer</h3>
                <p class="text-muted">Update trainer information</p>
            </header>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="mb-4 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">Editing Profile For</small>
                                <h4 class="mb-0 text-black">Mohamed</h4>
                            </div>
                            <form asp-action="TrainerEdit" method="post">
                                <input asp-for="Name" hidden />
                               
                                <!-- Personal Information -->
                                <div class="section-header mb-3">
                                    <h5 class="text-primary fw-bold">Personal Information</h5>
                                    <hr class="mt-2">
                                </div>
                                <div class="row g-3 mb-4">


                                    <div class="col-md-6">
                                        <label class="form-label">Email Address</label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Phone</label>
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">BuildingNumber</label>
                                        <input asp-for="BuildingNumber" class="form-control" />
                                        <span asp-validation-for="BuildingNumber"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Street</label>
                                        <input asp-for="Street" class="form-control" />
                                        <span asp-validation-for="Street"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">City</label>
                                        <input asp-for="City" class="form-control" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Professional Information -->
                                <div class="section-header mb-3">
                                    <h5 class="text-primary fw-bold">Professional Information</h5>
                                    <hr class="mt-2">
                                </div>
                                <div class="row g-3">

                                    <div class="col-12">
                                        <label class="form-label fw-semibold">
                                            Specializations <span class="text-danger">*</span>
                                        </label>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialties"
                                                   value="GeneralFitness" />
                                            <label class="form-check-label">GeneralFitness</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialties"
                                                   value="Yoga" />
                                            <input asp-for="@Specialties.yoga" class="form-control" />
                                            <span asp-validation-for="@Specialties.yoga" class="text-danger"></span>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialties"
                                                   value="Boxing" />
                                            <input asp-for="@Specialties.Boxing" class="form-control" />
                                            <span asp-validation-for="@Specialties.Boxing" class="text-danger"></span>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Specialties"
                                                   value="CrossFit" />
                                            <V<input asp-for="@Specialties.Crossfit" class="form-control" />
                                            <span asp-validation-for="@Specialties.Crossfit" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-outline">
                                        <i class="bi bi-arrow-left me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-fill">
                                        <i class="bi bi-check-lg me-1"></i>Update Trainer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


